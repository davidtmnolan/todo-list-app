
<section id="todo-lists">
	<%= link_to 'New Todo List', new_todo_list_path, :class => "button tiny" %>

	<h1>Listings</h1>

	<table>
		<th>Active</th>
		<th></th>
		<th>Completed</th>
		
		<% @todo_lists.each do |todo_list| %>
		<tr>
			<td><%= distance_of_time_in_words_to_now(todo_list.created_at) %></td>
			<td><%= link_to todo_list.title, todo_list_todo_items_path(todo_list) %></td>
			<td><%= todo_list.todo_items.completed.count %> of <%= todo_list.todo_items.count %></td>
			<td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: "Are you sure?" } %></td>
		</tr>
		<% end%>
	</table>
</section>